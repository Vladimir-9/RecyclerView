<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraint_layout"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_cars"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tw_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/tw_color"
        app:layout_constraintBottom_toTopOf="@+id/tw_car_model"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/iv_cars"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name"
        tools:textSize="25sp" />

    <TextView
        android:id="@+id/tw_car_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/tw_color"
        app:layout_constraintBottom_toTopOf="@+id/tw_capacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/iv_cars"
        app:layout_constraintTop_toBottomOf="@+id/tw_car"
        tools:text="@string/app_name"
        tools:textSize="25sp" />

    <TextView
        android:id="@+id/tw_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/tw_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/iv_cars"
        app:layout_constraintTop_toBottomOf="@+id/tw_car_model"
        tools:text="@string/app_name"
        tools:textSize="25sp" />

</androidx.constraintlayout.widget.ConstraintLayout>